@model IEnumerable<NetMind.Areas.Admin.Models.Tracker>

@{
    ViewData["Title"] = "Trackers";
    ViewData["CardTitle"] = "Trackers";
    Layout = "ListView";
}

<p>
    <a asp-action="Create" class="text-decoration-none">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="text-decoration-none" asp-area="Admin" asp-controller="Trackers" asp-action="Sort" asp-route-id="@item.TrackerID" asp-route-sort=@SortTo.First>
                        <i class="bi bi-chevron-double-up" style="color: cornflowerblue;"></i>
                    </a>
                    <a class="text-decoration-none" asp-area="Admin" asp-controller="Trackers" asp-action="Sort" asp-route-id="@item.TrackerID" asp-route-sort=@SortTo.Prev>
                        <i class="bi bi-chevron-up" style="color: cornflowerblue;"></i>
                    </a>
                    <a class="text-decoration-none" asp-area="Admin" asp-controller="Trackers" asp-action="Sort" asp-route-id="@item.TrackerID" asp-route-sort=@SortTo.Next>
                        <i class="bi bi-chevron-down" style="color: cornflowerblue;"></i>
                    </a>
                    <a class="text-decoration-none" asp-area="Admin" asp-controller="Trackers" asp-action="Sort" asp-route-id="@item.TrackerID" asp-route-sort=@SortTo.Last>
                        <i class="bi bi-chevron-double-down" style="color: cornflowerblue;"></i>
                    </a>
                </td>
                <td>
                    <a class="text-decoration-none" asp-action="Edit" asp-route-id="@item.TrackerID"><i class="bi bi-pencil"></i> Edit</a> |
                    <a class="text-decoration-none" asp-action="Delete" asp-route-id="@item.TrackerID"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
