@model NetMind.Areas.Admin.Models.Status

@{
    ViewData["Title"] = "Edit";
    ViewData["CardTitle"] = "Status";
    Layout = "EditView";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="StatusID" />
    <input type="hidden" asp-for="Order" />
    
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-1 col-form-label"></label>
        <input asp-for="Name" class="col-sm-3 form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsDefault" /> @Html.DisplayNameFor(model => model.IsDefault)
        </label>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsClosed" /> @Html.DisplayNameFor(model => model.IsClosed)
        </label>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

