@model NetMind.Models.LoginModel

@{
    ViewData["Title"] = "Pieslēgšanās";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="card rounded shadow m-5">
                <div class="card-header">
                    <h3>Pieslēgšanās</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" asp-route-returnUrl="@ViewBag.returnUrl">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input type="text" asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger" />
                            </div>
                            <div class="form-check-inline">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label"></label>
                            </div>
                            <div class="form-group text-center m-2">
                                <input type="submit" value="Pieslēgties" class="btn btn-outline-dark btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
    </div>
</div>